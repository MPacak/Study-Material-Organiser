@model StudyMaterialOrganiser.ViewModels.MaterialVM
@{
    ViewData["Title"] = "Delete Material";
}
<div class="container py-4">
    <h1 class="display-6">Delete Material</h1>
    <div class="alert alert-danger">
        Are you sure you want to delete this material?
    </div>

    <div class="card">
        <div class="card-body">
            <h5 class="card-title">@Model.Name</h5>
            <p class="card-text">@Model.Description</p>
            <dl class="row">
                <dt class="col-sm-2">Link</dt>
                <dd class="col-sm-10">@Model.Link</dd>

                @if (!string.IsNullOrEmpty(Model.FilePath))
                {
                    <dt class="col-sm-2">File</dt>
                    <dd class="col-sm-10">@Model.FilePath</dd>
                }
            </dl>
        </div>
    </div>

    <form asp-action="Delete" method="post" class="mt-3">
        <input type="hidden" asp-for="Idmaterial" />
        <div class="text-end">
            <button type="submit" class="btn btn-danger">Delete</button>
            <a class="btn btn-secondary" asp-action="List">Cancel</a>
        </div>
    </form>
</div>