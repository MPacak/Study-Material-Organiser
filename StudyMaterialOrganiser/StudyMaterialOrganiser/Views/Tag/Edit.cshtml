@model StudyMaterialOrganiser.ViewModels.TagVM

<h1>Edit Tag</h1>

<form asp-action="Edit" method="post">
    <div class="form-group">
        <input asp-for="Id" type="hidden" />
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
