<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="hr.piprojekt.studymaterialorganiser.MaterialController" spacing="20" alignment="CENTER">
    <Label text="Add New Material" style="-fx-font-size: 24;" />
    <TextField fx:id="nameField" promptText="Enter material name" />
    <Label fx:id="nameErrorLabel" textFill="red" />
    <TextArea fx:id="descriptionField" promptText="Enter material description" />
    <TextField fx:id="linkField" promptText="Enter material link" />
    <TextField fx:id="filePathField" promptText="Enter file path" />
    <ComboBox fx:id="fileTypeComboBox" promptText="Select file type" />
    <Label text="Select Tags:" />

    <Button text="Save Material" onAction="#handleSaveMaterial" />
    <Button text="Back to Home Page" onAction="#handleHomePage" />
</VBox>
